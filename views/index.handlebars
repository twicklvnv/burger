<div class = "container">
    <div class = "row">
        <div class = "col-md-12 text-center" id = "top-bar">
            <h1>Eat-Da-Burger!</h1>
            <img src = "/assets/images/appetite-beef-big-bread-161674.jpg" alt = "picture of hamburger">

        </div>

        <div class = "col-md-6 text-center" class = "task">
            <div class = "row">
            <h3>Burgers you can eat</h3>
            
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class = "col-md-6 text-center">
                   <pre> {{this.id}},{{this.burger_name}}</pre>
                </div>
                <div class = "col-md-6 text-center">
                    <form method = "POST" action = "/burgers/update?_method = "PUT" class = "button-size">
                    <input type = "hidden" name = "burger_id" type = "text" value = {{this.id}}>
                    <br>
                    <button class = "btn btn-default" type = "submit">Devour it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
                </div>
            </div>
    </div>

        <div class = "col-md-6 text-center" class = "task">
            <h3>Burgers you already ate</h3>
            
                {{#each burger_data}}
                {{#if this.devoured}}
                    <li>
                        {{this.id}}
                        {{this.burger_name}}
                    </li>
                 {{/if}}
                {{/each}}
        
        </div>
    </div>

    <div class = "row">
        <div class = "col-md-12 text-center">
            <h3>Add a new burger</h3>
            <form action = "/burgers/create" method = "POST">
                
                <input type = "text" id = "new" name = "burger_name" class = "form-control" value = "">
                <br>
                <button class = "btn btn-primary" type = "submit">Submit</button>
            </form>
                <br>
                <p>Enter a burger you want to eat and click the Submit button.</p>
        </div>
    </div>
</div>
    
    